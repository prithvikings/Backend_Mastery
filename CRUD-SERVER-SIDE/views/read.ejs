<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class=" w-full min-h-screen bg-zinc-900 text-white p-10">
        <a href="/" class="text-blue-500 ">Back to Home</a>
        <h1 class="text-3xl mb-3 text-tighter mt-10">All a User</h1>
        <% if (users.length > 0) { %>
            <div class="users flex flex-wrap gap-3">  <!-- Moved outside the loop -->
                <% users.forEach(function(user) { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-72 rounded-lg bg-zinc-300 overflow-hidden">
                            <img src="<%=user.image%>" alt="<%=user.name%>" class="w-full h-full object-cover object-top">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%=user.name%></h3>
                        <h5 class="text-zinc-500"><%=user.email%></h5>
                        <div class="flex mt-10 gap-3">
                            <a class="text-zinc-200" href="/edit/<%=user._id%>">Edit User</a>
                            <a class="text-red-500" href="/delete/<%=user._id%>">Delete User</a>
                        </div>
                    </div>
                <% }) %>
            </div> <!-- Closing flex container -->
        <% } else { %>
            <h3 class="text-lg text-zinc-500">No users found</h3>
        <% } %>
        
       
    </div>
</body>
</html>

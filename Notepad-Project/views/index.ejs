<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="form p-5">
            <form action="/create" method="POST">
                <input class="block w-full rounded-lg px-5 py-2 bg-zinc-800 outline-none" type="text" placeholder="Title" name="title" required>
                <textarea class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800 resize-none mt-2" placeholder="Task details" name="details" required></textarea>
                <button class="mt-2 px-5 py-2 bg-blue-600 rounded-md hover:bg-blue-800 transition-ease" type="submit">Add Task</button>
            </form>
        </div>

        <div class="tasks p-5 flex flex-wrap gap-5">
            <% if(files.length > 0) { %>
                <% files.forEach(file => { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-2xl"><%= file.title %></h1>
                        <a href="/file/<%= file._id %>" class="text-blue-500 mt-2 inline-block">View</a>
                        <a href="/edit/<%= file._id %>" class="text-yellow-500 inline-block mt-2 ml-2">Edit</a>
                    </div>
                <% }) %>
            <% } else { %> 
                <h3 class="text-zinc-400">No tasks yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>
